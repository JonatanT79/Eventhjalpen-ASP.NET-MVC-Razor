@model AddUser
@{
    ViewData["Title"] = "Register User";
}
<h1>@ViewData["Title"]</h1>

<div class="text-center">
    <h1 class="display-4">Registrera Användare</h1>
</div>

<form asp-action="RegisterUser" class="form-horizontal">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <div class="form-group">
        <label class="control-label">Firstname</label>
        <input asp-for="Users" class="form-control" />
        <span asp-validation-for="Users" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label class="control-label">Lastname</label>
        <input asp-for="Users" class="form-control" />
        <span asp-validation-for="Users" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label class="control-label">Email</label>
        <input asp-for="Users" class="form-control" />
        <span asp-validation-for="Users" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label class="control-label">Phonenumber</label>
        <input asp-for="Users" class="form-control" />
        <span asp-validation-for="Users" class="text-danger"></span>
    </div>
    <div class="form-group">
        <input type="submit" value="Submit" class="btn bg-primary" />

    </div>
</form>
@{
    if (@TempData["Msg"] != null)
    {
        <script>

            alert('@TempData["msg"]')
        </script>

    }
}

