@model ViewProducts
@{
    ViewData["Title"] = "ReceptInformation";
}

<div class="jumbotron">
    <h1 class="display-4">@Model.RecipeName</h1>
    <p class="lead">Tillagningstid: @Model.EstimatedTime minuter</p>
    <hr class="my-4">

    <div class="card">
        @{string s = "/Images/" + @Model.RecipeName + ".jpg";}
        <img src="@s" class="p-2" style="width: 100%; height: 50%;" />

        <ul class="list-group w-100">

            @foreach (var item in Model.Productslist)
            {
                <li class="list-group-item">
                    <label><input type="checkbox" checked="checked">@item.ProductName  @item.ProductQuantity  @item.Measurement </label>
                </li>
            }

        </ul>
    </div>

    <h1>Gör så här:</h1>

    @foreach (var step in Model.StepList)
    {
        <p class="display-10">@step.Stepnumber: @step.Instructions</p>
    }
    @*Fixa designen och förkorta ner text-inputet*@
    <p class="text-black-50" style="text-align:right;">Portioner:</p>

    <button type="button" class="btn btn-success" style="text-align:right; float: right;">+</button>
    <input  type="text" value ="4" style="text-align: center; float:right; width:3%;" />
    <button type="button" class="btn btn-danger" style=" text-align: right; float: right;">-</button>

    <a asp-controller="Recipe" asp-action="Recipes" style=" text-align: left; float: left">Tillbaka</a>
</div>

